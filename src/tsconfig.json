{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "isolatedModules": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noImplicitAny": false,
    "noImplicitUseStrict": false,
    "noLib": false,
    "noUnusedLocals": true,
    "outDir": "../dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2017"
  },
  "exclude": [
    "node_modules",
    "src/**/__tests__",
    "playground",
    "_playground",
    "src/**/_benchmark*",
    "packages/compiler/playground"
  ]
}
